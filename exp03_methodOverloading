class AreaCalculator{

    double calculateArea(double radius){
        return Math.PI * radius * radius;
    }
     double calculateArea(double base , double height){
        return 0.5* base * height;
    }
     double calculateArea(int length , int width){
        return length * width ;
    }
     double calculateArea(int side){
        return side * side;
    }
}
public class Exp03_methodoverloading {
    public static void main(String args[]){
        AreaCalculator value = new AreaCalculator();
        System.out.println("Area of Circle: " + value.calculateArea(5.0));
        System.out.println("Area of Triangle: " + value.calculateArea(5.0 , 4.2));
        System.out.println("Area of Rectangle: " + value.calculateArea(5 , 4));
        System.out.println("Area of Square: " + value.calculateArea(5));
    }
}
